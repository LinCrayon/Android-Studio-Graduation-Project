<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bga"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/reset_layoujt"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@id/score_layout"
        android:layout_below="@id/score_layout"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/reset"
            android:text="重新开始"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:background="@drawable/btn_bg"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/zym_btn"
            android:layout_toRightOf="@id/reset"
            android:background="@drawable/zym"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/score_layout"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/my_score"
            android:background="@drawable/fenshu_bg"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="我的分数"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#FF6A6A"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text="0"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="#FF6A6A"
                android:id="@+id/now_score"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:layout_height="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/my_score"
            android:layout_marginLeft="5dp"
            android:background="@drawable/fenshu_bg"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="最高分数"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#FF6A6A"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:text="0"
                android:gravity="center"
                android:id="@+id/best_score"
                android:layout_margin="2dp"
                android:textColor="#FF6A6A"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:layout_height="40dp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#C0AF9D"
        android:layout_below="@id/reset_layoujt"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_height="460dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_00"
                android:layout_width="0dp"
                android:background="@drawable/text_bg"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/id_01"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/text_bg"
                android:textSize="40sp"
